doctype html
html
  head
    title= 'ProFTPd Manager'
    link(rel='stylesheet', href='/stylesheets/style.css')
    link(rel='stylesheet', href='/stylesheets/todc-bootstrap.css')
    link(rel='stylesheet', href='/stylesheets/bootstrap-theme.css')
    link(rel='stylesheet', href='/stylesheets/bootstrap.css')
    link(rel='stylesheet', href='/stylesheets/ftp.css')

    script(src='http://code.jquery.com/jquery-1.10.2.min.js')
    script(src='javascripts/bootstrap.js')
    script(src='javascripts/ftp.js')
  body
    #wrap
      // Fixed navbar
      .navbar.navbar-default.navbar-fixed-top(role='navigation')
        .container
          .navbar-header
            button.navbar-toggle(type='button', data-toggle='collapse', data-target='.navbar-collapse')
              span.sr-only Toggle navigation
              span.icon-bar
              span.icon-bar
              span.icon-bar
            a.navbar-brand(href='/') ProFTPd Manager
          .collapse.navbar-collapse
            ul.nav.navbar-nav
              li
                a(href='/') Users
              li
                a(href='/groups') Groups
              li.dropdown
                a.dropdown-toggle(href='#', data-toggle='dropdown')
                  | Add
                  b.caret
                ul.dropdown-menu
                  li
                    a(href='/addUser') User
                  li
                    a(href='/addGroup') Group

    block content

    #ModalAddgroup.modal.fade(tabindex='-1', role='dialog', aria-labelledby='myModalLabel', aria-hidden='true')
      .modal-dialog
          .modal-content
             .modal-header
                button.close(type='button', data-dismiss='modal', aria-hidden='true') ×
                h4#LabelAddGroup.modal-title Ajouter un groupe
             .modal-body
                input.modalWidth.form-control#AddGroup(type='text' placeholder='Nom du groupe')
                br
                .alert.alert-warning.alerteGroup.modalWidth#ErrorAddGroup
                  .errorContent
                .alert.alert-success.alerteGroup.modalWidth#SuccessAddGroup
                  .succesContent
             .modal-footer
                button.btn.btn-default(type='button', data-dismiss='modal') Retour
                button.btn.btn-primary#group(type='button') Ajouter

    #ModalAddUser.modal.fade(tabindex='-1', role='dialog', aria-labelledby='ModalLabel', aria-hidden='true')
      .modal-dialog
          .modal-content
             .modal-header
                button.close(type='button', data-dismiss='modal', aria-hidden='true') ×
                h4#LabelAddUser.modal-title Ajouter un utilisateur
             .modal-body
                input.modalWidth.form-control#AddUser(type='text' placeholder='Nom de l\'utilisateur')
                br
                input.modalWidth.form-control#PwdUser(type='password' placeholder='Mot de passe')
                br
                .alert.alert-warning.alerteUser.modalWidth#ErrorAddUser
                  .errorContent
                .alert.alert-success.alerteUser.modalWidth#SuccessAddUser
                  .succesContent
             .modal-footer
                button.btn.btn-default(type='button', data-dismiss='modal') Retour
                button.btn.btn-primary#user(type='button') Ajouter