doctype html
html
  head
    meta(charset='UTF-8')
    title= 'ProFTPd Manager'
    link(rel='stylesheet', href='/stylesheets/style.css')
    link(rel='stylesheet', href='/stylesheets/vendor/todc-bootstrap.css')
    link(rel='stylesheet', href='/stylesheets/vendor/bootstrap-theme.css')
    link(rel='stylesheet', href='/stylesheets/vendor/bootstrap.css')
    link(rel='stylesheet', href='/stylesheets/vendor/todc-bootstrap.css.map')
    link(rel='stylesheet', href='/stylesheets/vendor/bootstrap-theme.css.map')
    link(rel='stylesheet', href='/stylesheets/vendor/bootstrap.css.map')

    script(src='javascripts/vendor/jquery-2.1.0.min.js')
    script(src='javascripts/vendor/bootstrap.js')
    script(src='javascripts/ftp.js')
  body
    block header
      a(href='https://github.com/nascotix')
        img(style='position: absolute; top: 0; right: 0; border: 0; z-index:1;', src='https://github-camo.global.ssl.fastly.net/652c5b9acfaddf3a9c326fa6bde407b87f7be0f4/68747470733a2f2f73332e616d617a6f6e6177732e636f6d2f6769746875622f726962626f6e732f666f726b6d655f72696768745f6f72616e67655f6666373630302e706e67', alt='Fork me on GitHub', data-canonical-src='https://s3.amazonaws.com/github/ribbons/forkme_right_orange_ff7600.png')
      #wrap
        // Fixed navbar
        .navbar.navbar-default(role='navigation')
          .container
            .navbar-header
              button.navbar-toggle(type='button', data-toggle='collapse', data-target='.navbar-collapse')
                span.sr-only Toggle navigation
                span.icon-bar
                span.icon-bar
                span.icon-bar
              a.navbar-brand ProFTPd Manager
            .collapse.navbar-collapse
              ul.nav.navbar-nav
                li
                  a(href='/users') Utilisateurs
                li
                  a(href='/groups') Groupes

    block content

    #ModalGroup.modal.fade(tabindex='-1', role='dialog', aria-labelledby='myModalLabel', aria-hidden='true')
      .modal-dialog
        .modal-content
          .modal-header
            button.close(type='button', data-dismiss='modal', aria-hidden='true') ×
            h4#LabelGroup.modal-title.centerContent Ajouter un groupe
          .modal-body
            .form-horizontal
              .form-group
                label.col-md-4.control-label Nom du groupe
                .col-md-6
                  input#GroupName.form-control(type='text', placeholder='Nom du groupe')
              .form-group
                label.col-md-4.control-label Gid
                  span.infoGid(title='Doit être un nombre et UNIQUE !')  [?]
                .col-md-6
                  input#GroupId.form-control(type='text', placeholder='Gid')
              .form-group
                label.col-md-4.control-label Membres du groupe
                .col-md-6
                  input#GroupMember.form-control(type='text', placeholder='Membres du groupe')
              .alert.alert-warning.alerteGroup#ErrorGroup
                    .errorContent
                  .alert.alert-success.alerteGroup#SuccessGroup
                    .succesContent
          .modal-footer
            .form-group
              .col-sm-offset-2.col-sm-10
                button.btn.btn-default(type='button', data-dismiss='modal') Retour
                button.btn.btn-primary#group(type='button' data-addmode='true') Ajouter

    #ModalUser.modal.fade(tabindex='-1', role='dialog', aria-labelledby='myModalLabel', aria-hidden='true')
      .modal-dialog
        .modal-content
          .modal-header
            button.close(type='button', data-dismiss='modal', aria-hidden='true') ×
            h4#LabelUser.modal-title.centerContent Ajouter un utilisateur
          .modal-body
            .form-horizontal
              .form-group
                label.col-md-4.control-label Nom de l'utilisateur
                .col-md-6
                  input#UserName.form-control(type='text', placeholder='Nom de l\'utilisateur')
              .form-group
                label.col-md-4.control-label Mot de passe
                .col-md-6
                  input#PwdUser.form-control(type='password', placeholder='Mot de passe')
              .form-group
                label.col-md-4.control-label Uid
                .col-md-6
                  input#UserId.form-control(type='text', placeholder='Uid' value='0')
              .form-group
                label.col-md-4.control-label Gid
                .col-md-6
                  select.form-control#UserGrp
              .form-group
                label.col-md-4.control-label Répertoire personnel
                .col-md-6
                  input#HomeDir.form-control(type='text', placeholder='Répertoire personnel')
              .form-group
                label.col-md-4.control-label Shell
                .col-md-6
                  select.form-control#Shell
                    option(value='/bin/false') /bin/false
                    option(value='/bin/ash') /bin/ash
                    option(value='/bin/bash') /bin/bash
                    option(value='/bin/passwd') /bin/passwd
                    option(value='/bin/sh') /bin/sh
                    option(value='/bin/tcsh') /bin/tcsh
                    option(value='usr/bin/ksh') /usr/bin/ksh
                    option(value='/usr/bin/zsh') /usr/bin/zsh
              .alert.alert-warning.alerteGroup#ErrorUser
                    .errorContent
                  .alert.alert-success.alerteGroup#SuccessUser
                    .succesContent
          .modal-footer
            .form-group
              .col-sm-offset-2.col-sm-10
                button.btn.btn-default(type='button', data-dismiss='modal') Retour
                button.btn.btn-primary#user(type='button' data-addmode='true') Ajouter
